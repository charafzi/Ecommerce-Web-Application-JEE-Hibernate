<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>produits.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AuthControleur</servlet-name>
    <servlet-class>controleur.AuthControleur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthControleur</servlet-name>
    <url-pattern>/AuthControleur</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommandeControleur</servlet-name>
    <servlet-class>controleur.CommandeControleur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommandeControleur</servlet-name>
    <url-pattern>/CommandeControleur</url-pattern>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>controleur.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/SignUpServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ProduitControleur</display-name>
    <servlet-name>ProduitControleur</servlet-name>
    <servlet-class>controleur.ProduitControleur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProduitControleur</servlet-name>
    <url-pattern>/ProduitControleur</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AdminControleur</display-name>
    <servlet-name>AdminControleur</servlet-name>
    <servlet-class>controleur.AdminControleur</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminControleur</servlet-name>
    <url-pattern>/AdminControleur</url-pattern>
  </servlet-mapping>
</web-app>